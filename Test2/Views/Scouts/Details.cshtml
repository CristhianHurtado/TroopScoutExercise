@model Test2.Models.Scout

@{
    ViewData["Title"] = "Scout Details";
}

<h2>Scout Details</h2>

<div>
    <hr />
    @{
        if (Model.ScoutPhoto?.Content != null)
        {
            @:<div>
                string imageBase64 = Convert.ToBase64String(Model.ScoutPhoto.Content);
                string imageSrc = string.Format("data:" + Model.ScoutPhoto.MimeType + ";base64,{0}", imageBase64);
                <img src="@imageSrc" alt="Profile Picture of @Model.FullName" title="Profile Picture of @Model.FullName" class="img-fluid rounded" />
            @:</div><hr />
        }
    }
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DOB)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DOBSummary)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FeePaid)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FeePaid)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Troop)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Troop.TroopName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Achievements)
        </dt>
        <dd class="col-sm-10">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(modelItem => Model.Achievements.FirstOrDefault().Year)
                        </th>
                        <th>
                            @Html.DisplayNameFor(modelItem => Model.Achievements.FirstOrDefault().HL)
                        </th>
                        <th>
                            @Html.DisplayNameFor(modelItem => Model.Achievements.FirstOrDefault().BV)
                        </th>
                        <th>
                            @Html.DisplayNameFor(modelItem => Model.Achievements.FirstOrDefault().LS)
                        </th>
                        <th>
                            @Html.DisplayNameFor(modelItem => Model.Achievements.FirstOrDefault().CE)
                        </th>
                        <th>
                            @Html.DisplayNameFor(modelItem => Model.Achievements.FirstOrDefault().EO)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Achievements.OrderByDescending(s => s.Year))
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Year)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HL)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BV)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LS)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EO)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to Scout List</a>
</div>
